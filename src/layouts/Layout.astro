---
import '@fontsource/space-grotesk/400'; // Defaults to weight 400
import '../styles/global.css';
import 'aos/dist/aos.css';
import Fondo from '../components/Fondo.astro';

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/logo.webp" />
        <title>{title}</title>
    </head>
    <body>
        <Fondo />
        <div class="max-w-[1200px] w-full mx-auto px-4">
            <slot />
        </div>
        <script is:inline src="/src/assets/js/aos.js" type="module"></script>
    </body>
</html>

<style>
    html,
    body {
        margin: 0;
        width: 100%;
        height: 100%;
        font-family: 'Space Grotesk', sans-serif;
        background: #000;
        color: #fff;
        scroll-behavior: smooth;
        position: relative;
    }
</style>
